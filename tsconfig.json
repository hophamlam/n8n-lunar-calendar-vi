{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2019",
		"lib": ["es2019"],
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"sourceMap": true
	},
	"include": ["nodes/**/*"],
	"exclude": ["node_modules", "dist"]
} 